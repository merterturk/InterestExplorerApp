@using InterestExplorerApp.Entities.Concrete;
@model Book
@{
    ViewBag.Title = "UpdateBook";
    List<SelectListItem> Category = ViewBag.Category;
}
<div class="content-wrapper" style="background-color:white;">
    <h2 class="text-success text-center">Roman Güncelleme</h2>
    @using (Html.BeginForm("UpdateBook", "Book", new { area = "admin" }, FormMethod.Post, new { @style = "margin-left:15px;", enctype = "multipart/form-data", @id = "myform" }))
    {
        @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Roman Adı</label>
        @Html.TextBoxFor(x => x.BookName, new { @class = "form-control"})
        @Html.ValidationMessageFor(x => x.BookName, "", new { @class = "text-danger" })
        <br />
        <label>Roman Açıklama</label>
        @Html.TextAreaFor(x => x.BookDescription, new { @class = "form-control", @style = "height:150px" })
        @Html.ValidationMessageFor(x => x.BookDescription, "", new { @class = "text-danger" })
        <br />
        <label>Yazarı</label>
        @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AuthorName, "", new { @class = "text-danger" })
        <br />
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(x => x.PageNumber, new { @class = "form-control", @type = "number" })
        @Html.ValidationMessageFor(x => x.PageNumber, "", new { @class = "text-danger" })
        <br />
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.CategoryId, Category, new { @class = "form-control" })
        <br />
        <label>Yayın Yılı</label>
        @Html.TextBoxFor(x => x.ReleaseYear, new { @class = "form-control", @type = "number" })
        @Html.ValidationMessageFor(x => x.ReleaseYear, "", new { @class = "text-danger" })
        <br />      
        <label>Resim</label>
        <img src="@Url.Content(Model.ImageURL)" height="240" width="240" style="margin-left:50px;" />
        <input type="file" name="file" />
        @Html.HiddenFor(x => x.CreatedDate)
    </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success w-50 mb-5" id="mybtn">Güncelle</button>
        </div>
    }

</div>


