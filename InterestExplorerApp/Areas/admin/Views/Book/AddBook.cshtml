@using InterestExplorerApp.Entities.DTOs;
@model BookLongDetailsDTO
@{
    ViewBag.Title = "AddBook";
    List<SelectListItem> Category = ViewBag.Category;
}
<div class="content-wrapper">
    <h2 class="text-center text-primary">Roman Ekleme</h2>
    @using (Html.BeginForm("AddBook", "Book", new { area = "admin" }, FormMethod.Post, new { @style = "margin-left:15px;", enctype = "multipart/form-data", @id = "myform" }))
    {
        @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Roman Adı</label>
        @Html.TextBoxFor(x => x.BookName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.BookName, "", new { @class = "text-danger" })
        <br />
        <label>Roman Açıklama</label>
        @Html.TextAreaFor(x => x.BookDescription, new { @class = "form-control",@style = "height:100px" })
        @Html.ValidationMessageFor(x => x.BookDescription, "", new { @class = "text-danger" })
        <br />
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.CategoryId, Category, new { @class = "form-control" })
        <br />
        <label>Yazarı</label>
        @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AuthorName, "", new { @class = "text-danger" })
        <br />
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(x => x.PageNumber, new { @class = "form-control", @type = "number" })
        @Html.ValidationMessageFor(x => x.PageNumber, "", new { @class = "text-danger" })
        <br />
        <label>Yayın Yılı</label>
        @Html.TextBoxFor(x => x.ReleaseYear, new { @class = "form-control", @type = "number" })
        @Html.ValidationMessageFor(x => x.ReleaseYear, "", new { @class = "text-danger" })
        <br />
        <div class="custom-file">
            <input type="file" name="ImageURL" class="custom-file-input" />
            <label class="custom-file-label">Resim Yükle</label>
            @Html.ValidationMessageFor(x => x.ImageURL, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-50 mb-5" id="mybtn">Kaydet</button>
        </div>
    }

</div>


