@using InterestExplorerApp.Entities.Concrete;
@model VideoGame
@{
    ViewBag.Title = "UpdateVideoGame";
    List<SelectListItem> Category = ViewBag.Category;
}
<div class="content-wrapper" style="background-color:white;">
    <h2 class="text-success text-center">Video Oyun Güncelleme</h2>
    @using (Html.BeginForm("UpdateVideoGame", "VideoGame", new { area = "admin" }, FormMethod.Post, new { @style = "margin-left:15px;", enctype = "multipart/form-data", @id = "myform" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Oyun Adı</label>
            @Html.TextBoxFor(x =>x.VideoGameName, new { @class = "form-control"})
            @Html.ValidationMessageFor(x => x.VideoGameName, "", new { @class = "text-danger" })
            <br />
            <label>Oyun Açıklama</label>
            @Html.TextAreaFor(x => x.VideoGameDescription, new { @class = "form-control", @style = "height:150px" })
            @Html.ValidationMessageFor(x => x.VideoGameDescription, "", new { @class = "text-danger" })
            <br />
            <label>Kategori</label>
            @Html.DropDownListFor(x => x.CategoryId, Category, new { @class = "form-control" })
            <br />
            <label>Yayın Yılı</label>
            @Html.TextBoxFor(x => x.ReleaseDate, new { @class = "form-control", @type = "number" })
            @Html.ValidationMessageFor(x => x.ReleaseDate, "", new { @class = "text-danger" })
            <br />
            <label>Imdb Puanı</label>
            @Html.TextBoxFor(x => x.IMDBScore, new { @maxlength = "3", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.IMDBScore, "", new { @class = "text-danger" })
            <br />
            <label>VideoURL</label>
            @Html.TextBoxFor(x => x.VideoURL, new { @class = "form-control" })
            <br />
            <label>Resim</label>
            <img src="@Url.Content(Model.ImageURL)" height="240" width="240" style="margin-left:50px;" />
            <input type="file" name="file" />
            @Html.HiddenFor(x => x.CreatedDate)
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success w-50 mb-5" id="mybtn">Güncelle</button>
        </div>
    }

</div>


