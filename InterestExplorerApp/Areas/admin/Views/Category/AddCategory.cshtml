@using InterestExplorerApp.Entities.DTOs;
@model AddCategoryDTO
@{
    ViewBag.Title = "AddCategory";
    List<SelectListItem> MainCategory = ViewBag.Category;
}
<div class="content-wrapper">
    <h2 class="text-center text-primary">Kategori Ekleme</h2>
    @using (Html.BeginForm("AddCategory", "Category", new { area = "admin" }, FormMethod.Post, new { @style = "margin-left:15px;", enctype = "multipart/form-data", @id = "myform" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Kategori Adı</label>
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control"})
            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
            <br />
            <label>Ana Kategori</label>
            @Html.DropDownListFor(x => x.MainCategoryId, MainCategory, new { @class = "form-control" })
            <br />
           
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-50 mb-5" id="mybtn">Kaydet</button>
        </div>
    }

</div>


