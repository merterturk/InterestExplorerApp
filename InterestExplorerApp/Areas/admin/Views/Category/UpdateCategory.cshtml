@using InterestExplorerApp.Entities.Concrete;
@model Category
@{
    ViewBag.Title = "UpdateCategory";
    List<SelectListItem> Category = ViewBag.Category;
}
<div class="content-wrapper" style="background-color:white;">
    <h2 class="text-success text-center">Kategori Güncelleme</h2>
    @using (Html.BeginForm("UpdateCategory", "Category", new { area = "admin" }, FormMethod.Post, new { @style = "margin-left:15px;", enctype = "multipart/form-data", @id = "myform" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Kategori Adı</label>
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control"})
            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
            <br />
            <label>Ana Kategori</label>
            @Html.DropDownListFor(x => x.MainCategoryId, Category, new { @class = "form-control" })
            <br />
            @Html.HiddenFor(x=>x.CreatedDate)
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success w-50 mb-5" id="mybtn">Güncelle</button>
        </div>
    }

</div>


