@using InterestExplorerApp.Entities.DTOs;
@model SeriesLongDetailsDTO
@{
    ViewBag.Title = "AddSeries";
    List<SelectListItem> Category = ViewBag.Category;
}
<div class="content-wrapper">
    <h2 class="text-center text-primary">Dizi Ekleme</h2>
    @using (Html.BeginForm("AddSeries", "Series", new { area = "admin" }, FormMethod.Post, new { @style = "margin-left:15px;", enctype = "multipart/form-data", @id = "myform" }))
    {
        @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Dizi Adı</label>
        @Html.TextBoxFor(x => x.SeriesName, new { @class = "form-control"})
        @Html.ValidationMessageFor(x => x.SeriesName, "", new { @class = "text-danger" })
        <br />
        <label>Dizi Açıklama</label>
        @Html.TextAreaFor(x => x.SeriesDescription, new { @class = "form-control", @style = "height:100px" })
        @Html.ValidationMessageFor(x => x.SeriesDescription, "", new { @class = "text-danger" })
        <br />
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.CategoryId, Category, new { @class = "form-control" })
        <br />
        <label>Yayın Yılı</label>
        @Html.TextBoxFor(x => x.Year, new { @class = "form-control", @type = "number" })
        @Html.ValidationMessageFor(x => x.Year, "", new { @class = "text-danger" })
        <br />
        <label>Sezon Sayısı</label>
        @Html.TextBoxFor(x => x.TotalSeason, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TotalSeason, "", new { @class = "text-danger" })
        <br />
        <label>Bölüm Sayısı</label>
        @Html.TextBoxFor(x => x.TotalEpisode, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TotalEpisode, "", new { @class = "text-danger" })
        <br />
        <label>Imdb Puanı</label>
        @Html.TextBoxFor(x => x.IMDBScore, new { @maxlength = "3", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.IMDBScore, "", new { @class = "text-danger" })
        <br />
        <label>VideoURL</label>
        @Html.TextBoxFor(x => x.VideoURL, new { @class = "form-control" })
        <br />
        <div class="custom-file">
            <input type="file" name="ImageURL" class="custom-file-input" />
            <label class="custom-file-label">Resim Yükle</label>
            @Html.ValidationMessageFor(x => x.ImageURL, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-50 mb-5" id="mybtn">Kaydet</button>
        </div>
    }

</div>


