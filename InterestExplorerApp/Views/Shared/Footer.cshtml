@using InterestExplorerApp.Entities.Concrete
@model IEnumerable<MainCategory>
<footer class="footer">
    <div class="container">
        <div class="row">
            <!-- footer list -->
            <!-- end footer list -->
            <!-- footer list -->
            @foreach (var item in Model)
            {
                <div class="col-6 col-sm-4 col-md-3">
                    <h6 class="footer__title">@item.MainCategoryName</h6>
                    @if (item.Categories.Count > 0)
                    {
                        <ul class="footer__list">
                            @foreach (var item2 in item.Categories)
                            {
                                <li><a href='@Url.Action("CategoryDetail", "Home", new { maincategory = item.Id, category = item2.Id })'>@item2.CategoryName</a></li>
                            }
                        </ul>
                    }

                </div>

            }
            
            <!-- end footer list -->
         
        </div>
            </div>
        </footer>
