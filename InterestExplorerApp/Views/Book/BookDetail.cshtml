@{
    var randomBook = TempData["GetRandomBook"] as IEnumerable<BookShortDetailsDTO>;
}
@using InterestExplorerApp.Entities.DTOs;
@model BookLongDetailsDTO

<body class="body">
    <section class="section details">
        <!-- details background -->
        <div class="details__bg" data-bg="img/home/home__bg.jpg"></div>
        <!-- end details background -->
        <!-- details content -->
        <div class="container">
            <div class="row">
                <!-- title -->
                <div class="col-12">
                    <h1 class="details__title">@Model.BookName</h1>
                </div>
                <!-- end title -->
                <!-- content -->
                <div class="col-12 col-xl-6">
                    <div class="card card--details">
                        <div class="row">
                            <!-- card cover -->
                            <div class="col-12 col-sm-4 col-md-4 col-lg-3 col-xl-5">
                                <div class="card__cover">
                                    <img src="@Model.ImageURL" alt="">
                                </div>
                            </div>
                            <!-- end card cover -->
                            <!-- card content -->
                            <div class="col-12 col-sm-8 col-md-8 col-lg-9 col-xl-7">
                                <div class="card__content">
                                    <ul class="card__meta">
                                        <li>
                                            <span>Kategori:</span> <a>@Model.CategoryName </a>
                                        </li>
                                        <li><span>Yazarı:</span><a> @Model.AuthorName </a></li>
                                        <li><span>Yayın Tarihi:</span><a>@Model.ReleaseYear </a></li>
                                        <li><span>Sayfa Sayısı:</span><a> @Model.PageNumber </a></li>
                                    </ul>
                                    <div class="card__description card__description--details">
                                        @Model.BookDescription
                                    </div>
                                </div>
                            </div>
                            <!-- end card content -->
                        </div>
                    </div>
                </div>
                <!-- end content -->
                <!-- player -->
                <!-- end player -->
                <!-- end availables -->
                <!-- share -->
                <!-- end share -->
            </div>
        </div>
        <!-- end details content -->
    </section>
    <section class="section section--bg" data-bg="img/section/section.jpg">
        <div class="container">
            <div class="row">
                <!-- section title -->
                <div class="col-12">
                    <h2 class="section__title">Önerilen Diğer Kitaplar</h2>
                </div>
                <!-- end section title -->
                <!-- card -->
                @foreach (var book in randomBook)
                {
                <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                    <div class="card">
                        <div class="card__cover">
                            <img src="@book.ImageURL" width="200" height="230" alt="">
                            <a href="@book.Id" class="card__play">
                                <i class="icon ion-ios-play"></i>
                            </a>
                        </div>
                        <div class="card__content">
                            <h3 class="card__title">@book.BookName</h3>
                            <span class="card__category">
                                <a>@book.CategoryName</a>
                            </span>
                        </div>
                    </div>
                </div>
                }
                <!--end card-->
            </div>
        </div>
    </section>
    <!-- end card -->
    <!-- section btn -->
    <!-- end details -->
    <!-- content -->
    <!-- end content -->
    <!-- Root element of PhotoSwipe. Must have class pswp. -->
    <!-- JS -->

</body>
