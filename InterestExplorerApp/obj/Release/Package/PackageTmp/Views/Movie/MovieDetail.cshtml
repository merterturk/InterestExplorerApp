@{ 
    var randomMovie = TempData["GetRandomMovie"] as IEnumerable<MovieShortDetailsDTO>;
}
@using InterestExplorerApp.Entities.DTOs;
@model MovieLongDetailsDTO
<body class="body">
    <section class="section details">
        <!-- details background -->
        <div class="details__bg" data-bg="img/home/home__bg.jpg"></div>
        <!-- end details background -->
        <!-- details content -->
        <div class="container">
            <div class="row">
                <!-- title -->
                <div class="col-12">
                    <h1 class="details__title">@Model.MovieName</h1>
                </div>
                <!-- end title -->
                <!-- content -->
                <div class="col-12 col-xl-6">
                    <div class="card card--details">
                        <div class="row">
                            <!-- card cover -->
                            <div class="col-12 col-sm-4 col-md-4 col-lg-3 col-xl-5">
                                <div class="card__cover">
                                    <img src="@Model.ImageURL" alt="">
                                </div>
                            </div>
                            <!-- end card cover -->
                            <!-- card content -->
                            <div class="col-12 col-sm-8 col-md-8 col-lg-9 col-xl-7">
                                <div class="card__content">
                                    <div class="card__wrap">
                                        <span class="card__rate"><i class="icon ion-ios-star"></i>@Model.IMDBScore</span>
                                        <ul class="card__list">
                                            <li>HD</li>
                                            <li>16+</li>
                                        </ul>
                                    </div>
                                    <ul class="card__meta">
                                        <li>
                                            <span>Kategori:</span> <a>@Model.CategoryName </a>
                                        </li>
                                        <li><span>Yayın Tarihi:</span><a>@Model.Year </a></li>
                                        <li><span>Toplam Dakika:</span><a> @Model.TotalTime </a></li>
                                    </ul>
                                    <div class="card__description card__description--details">
                                        @Model.MovieDescription
                                    </div>
                                </div>
                            </div>
                            <!-- end card content -->
                        </div>
                    </div>
                </div>
                <!-- end content -->
                @if (!string.IsNullOrEmpty(Model.VideoURL))
                {
                    <div class="col-12 col-xl-6">
                        <div class="container">
                            <div id="player" data-plyr-provider="youtube" data-plyr-embed-id="@Model.VideoURL"></div>
                        </div>
                    </div>
                }
                <!-- player -->
                <!-- end player -->
                <!-- end availables -->
                <!-- share -->
                <!-- end share -->
            </div>
        </div>
        <!-- end details content -->
    </section>
    <section class="section section--bg" data-bg="img/section/section.jpg">
        <div class="container">
            <div class="row">
                <!-- section title -->
                <div class="col-12">
                    <h2 class="section__title">Önerilen Diğer Filmler</h2>
                </div>
                <!-- end section title -->
                <!-- card -->
                @foreach (var movie in randomMovie)
                {
                <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                    <div class="card">
                        <div class="card__cover">
                            <img src="@movie.ImageURL" alt="">
                            <a href="@movie.Id" class="card__play">
                                <i class="icon ion-ios-play"></i>
                            </a>
                        </div>
                        <div class="card__content">
                            <h3 class="card__title">@movie.MovieName</h3>
                            <span class="card__category">
                              <a>@movie.CategoryName</a>
                            </span>
                            <span class="card__rate"><i class="icon ion-ios-star"></i>@movie.IMDBScore</span>
                        </div>
                    </div>
                </div>
                }

                </div>
            </div>
    </section>
                <!-- end card -->
                <!-- section btn -->
                <!-- end details -->
                <!-- content -->
                <!-- end content -->
                <!-- Root element of PhotoSwipe. Must have class pswp. -->
           
                <!-- JS -->

</body>
